<UserControl x:Class="CardFlip.UserControls.CardFlipUserControl.GameHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardFlip.UserControls.CardFlipUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="{StaticResource SubColorBrush}">
            <StackPanel VerticalAlignment="Center" Margin="0 0 0 50">
                <Button HorizontalAlignment="Center" VerticalAlignment="Center"  Name="OnlineBtn" Click="OnlineClick" Height="37" Style="{StaticResource NormalButton }" FontSize="16" FontWeight="Medium" Content="Online" Foreground="White" Margin="8" Background="{StaticResource MainColorBrush}" Width="140"></Button>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center"  Name="OfflineBtn" Click="OfflineClick" Height="37" Style="{StaticResource NormalButton }" FontSize="16" FontWeight="Medium" Content="Offline" Foreground="White" Margin="8" Background="{StaticResource MainColorBrush}" Width="140"></Button>
                <Button HorizontalAlignment="Center" VerticalAlignment="Center"  Name="ExitBtn" Click="ExitClick" Height="37" Style="{StaticResource NormalButton }" FontSize="16" FontWeight="Medium" Content="Exit" Foreground="White" Margin="8" Background="{StaticResource MainColorBrush}" Width="140"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
