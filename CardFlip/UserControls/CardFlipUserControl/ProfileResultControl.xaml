<UserControl x:Class="CardFlip.UserControls.CardFlipUserControl.ProfileResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardFlip.UserControls.CardFlipUserControl"
             mc:Ignorable="d"  MaxHeight="40" HorizontalAlignment="Stretch" Background="{StaticResource SubColorBrush}"
             d:DesignHeight="42" d:DesignWidth="300" Margin="0 1 0 1">
    <Grid>
        <Border Name="backgroundContainer" CornerRadius="8" BorderBrush="Gainsboro" BorderThickness="1" >
            <Grid Margin="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Border Name="positionborder" Grid.Column="0" BorderBrush="Black" Height="30" Width="30" Background="Silver" BorderThickness="1"  CornerRadius="15">
                    <Label Name="positionLabel" Content="15" VerticalAlignment="Center"  HorizontalContentAlignment="Center" VerticalContentAlignment="Top"  FontWeight="Bold" FontSize="14"></Label>
                </Border>
                <Label Name="nameLabel" Grid.Column="1" Margin="13 0 0 0" FontSize="15" Content="subramani" FontWeight="SemiBold"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center"></Label>
                <Label Name="durationTimeLabel" Grid.Column="2" Content="2 min 10sec" HorizontalContentAlignment="Center" FontSize="14" FontWeight="DemiBold" VerticalContentAlignment="Center"></Label>
            </Grid>
        </Border>   
    </Grid>
</UserControl>
